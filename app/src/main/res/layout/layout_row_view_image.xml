<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/image_white_line_background">

    <ImageView
        android:id="@+id/iv_lRVI_pic"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@color/colorPrimary" />



    <ImageView
        android:id="@+id/iv_lRVI_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@id/iv_lRVI_pic"
        android:layout_alignBottom="@id/iv_lRVI_pic"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_delete" />

    <ImageView
        android:id="@+id/iv_lRVI_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@id/iv_lRVI_pic"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_add" />


</RelativeLayout>