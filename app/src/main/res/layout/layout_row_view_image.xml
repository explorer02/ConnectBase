<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/image_white_line_background">

    <ImageView
        android:id="@+id/iv_lRVI_pic"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@color/colorPrimary" />

    <ImageView
        android:id="@+id/iv_lRVI_edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/iv_lRVI_pic"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_edit_white" />

    <ImageView
        android:id="@+id/iv_lRVI_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/iv_lRVI_edit"
        android:layout_alignBottom="@id/iv_lRVI_pic"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_delete" />

</RelativeLayout>