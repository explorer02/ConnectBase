<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linLay_lRCI"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">

    <TextView
        android:id="@+id/tv_lRCI_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="15sp"
        android:text="Name"
        android:textColor="@color/colorAccent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_chat_background_message_orange"
            android:orientation="vertical"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="250dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="5dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_lRCI_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@color/colorPrimary" />


                    <ImageView
                        android:id="@+id/iv_lRCI_more"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_more" />

                    <ImageView
                        android:id="@+id/iv_lRCI_download"
                        android:layout_width="68dp"
                        android:layout_height="58dp"
                        android:layout_marginStart="90dp"
                        android:background="@drawable/layout_circle_button_white"
                        android:padding="5dp"
                        android:layout_marginTop="90dp"
                        android:tint="@color/colorBlack"
                        android:src="@drawable/ic_download" />
                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <ProgressBar
                android:id="@+id/pb_lRCI_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:progress="0"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:progressBackgroundTint="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_lRCI_desc"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="2dp"
                    android:paddingEnd="8dp"
                    android:text="Description"
                    android:textColor="@color/colorWhite" />

                <ImageView
                    android:id="@+id/iv_lRCI_seen"
                    android:layout_width="18dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_circle_seen"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_lRCI_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingEnd="10dp"
            android:textSize="12sp"
            android:paddingStart="0dp"
            android:text="Time"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

</LinearLayout>